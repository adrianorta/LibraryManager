extends ../layout

block content
  include ../includes/navigation
  body
    h1 Loans
    p
      a.button(href='/loans/new') Create New Loan
    p
      | Filters 
      a(href='/loans/all') All
      |  
      a(href='/loans/overdue') Overdue
      |  
      a(href='/loans/checked') Checked Out
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
      each loan in loans
        tr
          td
            a(href='/books/detail')= loan.book_id
          td
            a(href='/patrons/detail')= loan.patron_id
          td= loan.loaned_on
          td= loan.return_by
          td= loan.returned_on
          td
            a.button(href='/books/return') Return Book
        
